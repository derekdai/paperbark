#!/bin/bash
pbadmin_help() {
    echo """paperbark administrator

usage:
    $pb_exec COMMAND [OPTIONS]
    where COMMAND is one of the following:"""
    for name in "${!commands[@]}"; do
        printf "      %15s    %s\n" $name "${commands[$name]}"
    done

    exit 0
}

pbadmin_destroy() {
    set +o errexit
    trap "" INT TERM

    cleanup_stack_pop_all
}

pbadmin_prepare() {
    pbadmin_dir="$HOME/pbadmin"
    pbadmin_conf_dir="$pbadmin_dir/conf"
    pbadmin_keys_dir="$pbadmin_conf_dir/keys"
    pbadmin_repo_dir="$pbadmin_dir/repo"
    pbadmin_git_dir="$pbadmin_repo_dir/pbadmin.git"
}

pbadmin_exec() {
    if [[ 0 == $# || '-h' == $1 || '--help' == $1 ]]; then
        pbadmin_help
    fi

    local command="$1"; shift
    if [[ -z "${commands[$command]}" ]]; then
        echo unknown command: \'$command\'
        pbadmin_help
    fi

    cmd_${command//-/_}_prepare "$@"
    cmd_${command//-/_}_exec
}
