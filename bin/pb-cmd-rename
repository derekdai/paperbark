#!/bin/bash
commands['rename']='rename snapshot'
command_alias['ren']='rename'

rename_help() {
    echo """
usage:
    $exec_file rename|ren OLD NEW
        OLD    origin snapshot id
        NEW    new snapshot id
"""

    exit 0
}

cmd_rename_prepare() {
    while [[ 0 != $# ]]; do
        case $1 in
            -h | --help)
                rename_help
                ;;
            *)
                if [[ -z "$rename_old_id" ]]; then
                    rename_old_id="$1"
                elif [[ -z "$rename_new_id" ]]; then
                    rename_new_id="$1"
                else
                    echo invalid argument: $1
                    rename_help
                fi
                ;;
        esac

        shift
    done

    if [[ -z "$rename_old_id" ]]; then
        echo old snapshot id not specified
        rename_help
    elif [[ -z "$rename_new_id" ]]; then
        echo new snapshot id not specified
        rename_help
    fi

    snapshot_id_add_version "$rename_old_id" latest rename_old_id
    snapshot_id_add_version "$rename_new_id" latest rename_new_id
}

cmd_rename_exec() {
    set -x
    if ! snapshot_exists "$rename_old_id" rename_old_dataset; then
        echo snapshot does not exist: $rename_old_id
        rename_help
        exit 1
    fi

    snapshot_rename "$rename_old_dataset" \
                    "${rename_old_dataset%@*}@$rename_new_id"
}
